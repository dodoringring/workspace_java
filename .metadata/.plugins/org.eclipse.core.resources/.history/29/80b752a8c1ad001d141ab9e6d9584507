package com.day1;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
//서블릿은 자바인데 브라우저에 출력할 수 있다.-화면의 역할을 한다. 화면을 그리는데 서블릿을 사용한다.
//mime타입 덕분에 가능하다.

@WebServlet("/html.do") // 웹에서 접근 가능한 맵핑 주소 설정

public class MimePlainServlet2 extends HttpServlet {

	@Override
	public void doGet(HttpServletRequest req, HttpServletResponse res)
	throws ServletException, IOException
	{
		res.setContentType("text/plian;charset=UFT-8");
		//메소드를 통해서 객체 생성하는 코드-고급
		PrintWriter out = res.getWriter();
		out.print("<h2>안녕하세요<h2>");
	}

}
